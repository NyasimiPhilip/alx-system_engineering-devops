#!/usr/bin/env bash
# This script displays the message "Best School" 10 times, but it prints "Hi" during the ninth iteration.

# Initialize a variable to control the loop
i=0
# Use a while loop to repeat the message 10 times
while ((i < 10))
do
    # Check if it's the 9th iteration
    if ((i == 8))
    then
        echo "Best School"  # Output "Best School" on the same line
        echo "Hi"         # Output "Hi" on the next line
    else
        echo "Best School"  # Output the message "Best School"
    fi

    ((i++))  # Increment the loop control variable
done
